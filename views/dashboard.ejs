<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <h1>Hey <%= user.username %>, welcome to your dashboard!</h1>
      <button onclick="toggleAddRecipeForm()">Add New Recipe</button>

      <h3>Your Recipes:</h3>
<% if (recipes.length > 0) { %>
  <div class="recipe-grid">
    <% recipes.forEach(recipe => { %>
      <div class="recipe-card">
        <h3><%= recipe.title %></h3>
        <p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
        <p><%= recipe.content %></p>
        <p>Rating: <%= recipe.rating %>/5</p>
        <div class="buttons">
          <a href="/dashboard/edit/<%= recipe.id %>">
          <button>Edit</button></a>

          <button onclick="deleteRecipe('<%= recipe.id %>')">Delete</button>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p>You have no recipes yet.</p>
<% } %>

    <div class="add-recipe-container recipe" id="addRecipeForm">
      <h2>Add Your Recipe</h2>
      <form action="/api/recipe" method="POST">
        <input type="text" name="title" placeholder="Recipe Title" required />
        <textarea
          name="ingredients"
          placeholder="Ingredients (comma separated)"
          required
        ></textarea>

        <textarea
          name="content"
          placeholder="Cooking Instructions"
          required
        ></textarea>

        <input
          type="number"
          name="rating"
          min="1"
          max="5"
          placeholder="Rating (1-5)"
          required
        />

        <div>
          <% if (errors && errors.length > 0) { %>
          <ul class="error-list">
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
          </ul>
          <% } %>
        </div>

          <button type="submit">Add Recipe</button>
          <button
            type="button"
            class="cancel-btn"
            onclick="toggleAddRecipeForm()"
          >
            Cancel
          </button>

      </form>
    </div>

    

    <script>
      function toggleAddRecipeForm() {
        const form = document.getElementById("addRecipeForm");
        form.style.display = form.style.display === "none" ? "flex" : "none";
      }

      async function deleteRecipe(recipeId) {
        if (!confirm("Are you sure you want to delete this recipe?")) return;

        await fetch(`/api/recipe/${recipeId}/delete`, {
          method: "POST",
        })
          .then((res) => {
            if (res.redirected) {
              window.location.href = res.url;
            } else {
              return res.text().then((text) => {
                alert("Failed to delete: " + text);
              });
            }
          })
          .catch((error) => {
            console.error("Error deleting recipe:", error);
            alert("Something went wrong.");
          });
      }

    </script>
  </body>
</html>
